<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox>
                <Label styleClass="cell_small_label" />
                <Label fx:id="id" styleClass="cell_big_label"/>
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">

            <Label styleClass="cell_small_label"  text="Client name:" />
                <Label fx:id="clientName" styleClass="cell_small_label" text="\$clientName" />
<!--            <Label fx:id="status" styleClass="cell_big_label" text="\$status" />-->
            </HBox>

            <HBox>
                <Label styleClass="cell_small_label" text="Hairdresser name: " />
                <Label fx:id="hairdresserName" styleClass="cell_small_label" text="\$hairdresserName" />
            </HBox>
            <HBox>
                <Label styleClass="cell_small_label" text="Date: " />
                <Label fx:id="date" styleClass="cell_small_label" text="\$date" />
            </HBox>
            <HBox>
                <Label styleClass="cell_small_label" text="Time: " />
                <Label fx:id="time" styleClass="cell_small_label" text="\$time" />
            </HBox>
            <HBox>
                <Label fx:id="status" styleClass="status_label" text="\$status" />
            </HBox>
        </VBox>
    </GridPane>
</HBox>
