<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<?import javafx.scene.layout.Region?>
<BorderPane id="borderPane" fx:id="borderPane" maxHeight="175" maxWidth="Infinity" minHeight="100" minWidth="300" prefHeight="160" prefWidth="300" xmlns="http://javafx.com/javafx/8.0.172-ea" xmlns:fx="http://javafx.com/fxml/1" styleClass="appt_card">
    <padding>
        <Insets bottom="5" left="5" right="5" top="5" />
    </padding>
    <left>
        <ImageView fitHeight="64" fitWidth="64" pickOnBounds="true" preserveRatio="true" BorderPane.alignment="CENTER">
            <image>
                <Image url="@../images/appt.png" />
            </image>
        </ImageView>
    </left>
    <center>
        <VBox alignment="CENTER_LEFT" minHeight="105">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox>
                <Label styleClass="cell_small_label" />
                <Label fx:id="id" styleClass="cell_big_label"/>
            </HBox>
            <HBox spacing="5" alignment="CENTER_LEFT">
                <minHeight>
                    <Region fx:constant="USE_PREF_SIZE"></Region>
                </minHeight>

                <Label styleClass="cell_small_label"  text="Client name:" wrapText="true">
                    <minWidth>
                        <Region fx:constant="USE_PREF_SIZE"></Region>
                    </minWidth>
                </Label>
                <Label fx:id="clientName" styleClass="cell_small_label" text="\$clientName" wrapText="true"/>
            </HBox>

            <HBox>
                <minHeight>
                    <Region fx:constant="USE_PREF_SIZE"></Region>
                </minHeight>
                <Label styleClass="cell_small_label" text="Hairdresser name: " wrapText="true">
                    <minWidth>
                        <Region fx:constant="USE_PREF_SIZE"></Region>
                    </minWidth>
                </Label>
                <Label fx:id="hairdresserName" styleClass="cell_small_label" text="\$hairdresserName" wrapText="true"/>
            </HBox>
            <HBox>
                <Label styleClass="cell_small_label" text="Date: " />
                <Label fx:id="date" styleClass="cell_small_label" text="\$date" />
            </HBox>
            <HBox>
                <Label styleClass="cell_small_label" text="Time: " />
                <Label fx:id="time" styleClass="cell_small_label" text="\$time" />
            </HBox>
            <HBox>
                <Label fx:id="status" styleClass="status_label" text="\$status" />
            </HBox>
        </VBox>
    </center>
</BorderPane>
