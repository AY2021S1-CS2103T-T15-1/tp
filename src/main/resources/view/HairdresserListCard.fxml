<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.ColumnConstraints?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>

<HBox id="cardPane" fx:id="cardPane" xmlns="http://javafx.com/javafx/8" xmlns:fx="http://javafx.com/fxml/1">
    <GridPane HBox.hgrow="ALWAYS">
        <columnConstraints>
            <ColumnConstraints hgrow="SOMETIMES" minWidth="10" prefWidth="150" />
        </columnConstraints>
        <VBox alignment="CENTER_LEFT" minHeight="105" GridPane.columnIndex="0">
            <padding>
                <Insets top="5" right="5" bottom="5" left="15" />
            </padding>
            <HBox spacing="5" alignment="CENTER_LEFT">
<!--                <Label fx:id="id" styleClass="cell_big_label">-->
<!--                    <minWidth>-->
<!--                        &lt;!&ndash; Ensures that the label text is never truncated &ndash;&gt;-->
<!--                        <Region fx:constant="USE_PREF_SIZE" />-->
<!--                    </minWidth>-->
<!--                </Label>-->
                <Label fx:id="id" styleClass="cell_big_label" text="\$id" />

            </HBox>
            <Label fx:id="name" text="\$name" styleClass="cell_big_label" />
            <FlowPane fx:id="specialisations" />
            <Label fx:id="title" styleClass="cell_small_label" text="\$title" />
            <Label fx:id="gender" styleClass="cell_small_label" text="\$gender" />
            <Label fx:id="phone" styleClass="cell_small_label" text="\$phone" />
            <Label fx:id="email" styleClass="cell_small_label" text="\$email" />
        </VBox>
    </GridPane>
</HBox>
